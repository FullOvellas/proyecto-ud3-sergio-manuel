<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.vaultapp.controller.MainGUIController" fx:id="root">
    <BorderPane fx:id="userContent">
        <!-- user content -->
        <top>
            <HBox>
                <Region fx:id="titleSpacer" />
                <Label fx:id="title" />
            </HBox>

        </top>
        <left>
            <VBox>
                <Region fx:id="spacer" />
            </VBox>
        </left>
        <center>
            <TableView fx:id="tblItems" />
        </center>
    </BorderPane>

    <Rectangle fx:id="layer" fill="black" opacity="0.0" width="100000" height="100000"/>

    <BorderPane>
        <left>
            <Rectangle height="800" fx:id="rect" opacity="0" fill="#537297" visible="false"/>
        </left>
    </BorderPane>

    <BorderPane>
        <left>
            <VBox fx:id="vbxSidebar"
                  spacing="10"
                  style="-fx-border-style: hidden solid hidden hidden; -fx-border-width: 1; -fx-border-color: #AAA">

                <Button fx:id="btnSideMenu" onAction="#expandRectangle" />
                <VBox fx:id="vaultControlsContainer" alignment="CENTER">
                    <Button fx:id="btnFilmView" onAction="#switchToFilmVault"/>
                    <Button fx:id="btnBookView" onAction="#switchToBookVault"/>
                </VBox>
            </VBox>
        </left>
    </BorderPane>
</StackPane>